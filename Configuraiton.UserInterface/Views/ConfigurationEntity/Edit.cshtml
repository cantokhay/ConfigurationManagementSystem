@model UpdateConfigurationEntityVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Configuration Entity</h1>
<div>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ApplicationName"></label>
            <input type="text" asp-for="ApplicationName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Type"></label>
            <input type="text" asp-for="Type" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Value"></label>
            <input type="text" asp-for="Value" class="form-control" />
        </div>
        <div class="form-group form-check">
            <input type="checkbox" asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>
